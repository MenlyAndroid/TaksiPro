<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="See result in Logs !"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/header_title"
                        style="@style/DescriptionBodyStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/taxi_pro"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/button_open"
                        style="@style/AppButtonOpen" />

                </FrameLayout>

                <TextView
                    style="@style/DescriptionBodyBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alef_bold"
                    android:text="@string/mobile_taxi" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/profitable"
                    android:textSize="18sp" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/three_tariffs" />

                <ImageView
                    android:layout_width="349dp"
                    android:layout_height="342dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/car" />

                <Button
                    android:id="@+id/button_registration"
                    style="@style/AppButton" />

                <ImageView
                    style="@style/Images"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/steering_wheel" />

                <TextView
                    style="@style/DescriptionBodyBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/choosing_a_comfortable_tariff" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorable_rates" />

                <ImageView
                    style="@style/Images"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/payment_card" />

                <TextView
                    style="@style/DescriptionBodyBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/instant_payments" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instant_withdrawal" />

                <ImageView
                    style="@style/Images"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/aggregators" />

                <TextView
                    style="@style/DescriptionBodyBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/all_aggregators_in_one_place" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gett_uber" />

                <include layout="@layout/loading_aggregators" />

                <ImageView
                    style="@style/Images"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/income" />

                <TextView
                    style="@style/DescriptionBodyBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/convenient_revenue" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/easily_track_balance" />

                <Button
                    android:id="@+id/button_registration1"
                    style="@style/AppButton"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_main" />

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="@string/our_rates"
                    android:textSize="23sp" />

                <include layout="@layout/loading_rates" />

                <ImageView
                    style="@style/Images"
                    android:layout_width="450dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/smartphone" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.3"
                            app:srcCompat="@mipmap/there_is" />

                        <TextView
                            style="@style/DescriptionTableStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quick_registration" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.3"
                            app:srcCompat="@mipmap/there_is" />

                        <TextView
                            style="@style/DescriptionTableStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/convenient_view" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.3"
                            app:srcCompat="@mipmap/there_is" />

                        <TextView
                            style="@style/DescriptionTableStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/login_from_any_device" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="0.3"
                            app:srcCompat="@mipmap/there_is" />

                        <TextView
                            style="@style/DescriptionTableStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/live_chat" />

                    </TableRow>

                </TableLayout>

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="@string/we_work_with_drivers"
                    android:textSize="20sp" />


                <ImageView
                    style="@style/Images"
                    android:layout_width="410dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/accord" />

                <Button
                    android:id="@+id/button_registration2"
                    style="@style/AppButton"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_main" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.3"
                        app:srcCompat="@mipmap/icon_vk" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.3"
                        app:srcCompat="@mipmap/icon_telegram" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="0.3"
                        app:srcCompat="@mipmap/icon_whatsapp" />

                </TableRow>

                <TextView
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>