                        android:textColor="@color/colorSkyBlue"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/my_tariff_roll_un"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_icon_un" />

                    <ImageView
                        android:id="@+id/my_tariff_roll_up"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_icon_up" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_my_tariffs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/button_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/DescriptionEnterCodeStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/start" />

                        <TextView
                            style="@style/DescriptionTariffStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/o_p_per_month" />

                        <include
                            layout="@layout/bottom_sheet_start_layout"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_comfort"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/DescriptionEnterCodeStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/comfort" />

                        <TextView
                            style="@style/DescriptionTariffStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/four_hundred_monthly_fee" />

                        <include
                            layout="@layout/bottom_sheet_comfort_layout"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_premium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/DescriptionEnterCodeStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/premium" />

                        <TextView
                            style="@style/DescriptionTariffStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/nine_hundred_monthly_fee" />


                        <include
                            layout="@layout/bottom_sheet_premium_layout"
                            android:visibility="visible" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/bottom_choose_tariff_next_month"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Выбрать тариф на следующий месяц"
                        android:textColor="@color/colorSkyBlue"
                        android:textSize="17sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/bottom_choose_tariff_next_month_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_margin="0dp"
                            android:background="#000" />

                        <TextView
                            style="@style/MyAutoBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Изменить текущий тариф"/>

                        <TextView
                            style="@style/MyAutoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="*Тариф будет изменен с 1 числа следующего месяца"/>

                        <LinearLayout
                            android:id="@+id/bottom_my_tariff_start"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBoxStart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp" />

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="0dp"
                                android:text="@string/start"
                                android:textColor="@color/colorSkyBlue"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/my_tariff_start_roll_un"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_icon_un" />

                            <ImageView
                                android:id="@+id/my_tariff_start_roll_up"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_up" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bottom_my_tariff_comfort"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBoxComfort"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp" />

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="0dp"
                                android:text="@string/comfort"
                                android:textColor="@color/colorSkyBlue"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/my_tariff_comfort_roll_un"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_icon_un" />

                            <ImageView
                                android:id="@+id/my_tariff_comfort_roll_up"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_up" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bottom_my_tariff_premium"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/checkBoxPremium"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="10dp" />

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="0dp"
                                android:text="@string/premium"
                                android:textColor="@color/colorSkyBlue"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/my_tariff_premium_roll_un"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@drawable/ic_icon_un" />

                            <ImageView
                                android:id="@+id/my_tariff_premium_roll_up"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_icon_up" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/button_enter_new_tariff"
                            style="@style/AppButton"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:text="@string/save_new_tariff" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_margin="10dp"
                    android:background="#000" />

                <LinearLayout
                    android:id="@+id/bottom_my_auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        app:srcCompat="@drawable/ic_icon_taxi" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_auto"
                        android:textColor="@color/colorSkyBlue"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/my_auto_roll_un"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_icon_un" />

                    <ImageView
                        android:id="@+id/my_auto_roll_up"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_icon_up" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_my_auto_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="ДАННЫЕ Т.С."
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/bottom_data_auto"
                            style="@style/DescriptionBodyStyle"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:text="Изменить"
                            android:textColor="@color/colorSkyBlue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MyAutoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Марка автомобиля" />

                        <TextView
                            android:id="@+id/car_type"
                            style="@style/MyAutoBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Renault" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MyAutoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Модель автомобиля" />

                        <TextView
                            android:id="@+id/car_model"
                            style="@style/MyAutoBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Logan" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MyAutoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Год производства автомобиля" />

                        <TextView
                            android:id="@+id/car_year_production"
                            style="@style/MyAutoBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2015" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            style="@style/MyAutoStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Цвет автомобиля" />

                        <TextView
                            android:id="@+id/car_color"
                            style="@style/MyAutoBoldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Черный" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

