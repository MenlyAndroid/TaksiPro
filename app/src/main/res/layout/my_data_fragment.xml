<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:background="@color/colorLilyWhite"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/bottom_my_data"
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/my_data" />

                <TextView
                    android:id="@+id/bottom_balance"
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/balance" />

                <TextView
                    android:id="@+id/bottom_withdraw_funds"
                    style="@style/DescriptionBodyStyle"
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/windraw_funds" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_my_data_visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        tools:srcCompat="@mipmap/image_real" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_surname"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Константинопольский"
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Вячеслав"
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/text_patronymic"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Геннадьевич"
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp" />

                        <TextView
