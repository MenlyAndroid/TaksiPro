<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>-->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <!--        <item name="colorOnSurface">#212121</item>-->
        <item name="android:colorBackground">@color/background</item>
        <!--        <item name="colorOnBackground">#212121</item>-->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="AppButton">
        <item name="backgroundTint">@color/colorSkyBlue</item>
        <item name="android:background">@drawable/button_main_shape</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/registration</item>

    </style>

    <style name="AppButtonOpen">
        <item name="backgroundTint">@color/background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/open</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="DescriptionBodyStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="DescriptionBodyBoldStyle" parent="DescriptionBodyStyle">
        <item name="android:fontFamily">@font/alef_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DescriptionEnterCodeStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSkyBlue</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="DescriptionEnterCodeExampleStyle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="DescriptionTableStyle">
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="DescriptionTariffStyle" parent="DescriptionBodyStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="DescriptionHeaderStyle" parent="DescriptionTextStyle">
        <item name="android:fontFamily">@font/alef_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Images">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:bottomLeftRadius">@dimen/corner_radius</item>
        <item name="android:bottomRightRadius">@dimen/corner_radius</item>
        <item name="android:topLeftRadius">@dimen/corner_radius</item>
        <item name="android:topRightRadius">@dimen/corner_radius</item>
        <item name="android:backgroundTint">@color/colorSkyBlue</item>
    </style>

    <style name="InputFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorSkyBlue</item>
        <item name="boxStrokeColor">@color/colorSkyBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MyAutoStyle">
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="MyAutoBoldStyle" parent="MyAutoStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="MyBalanceStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>